<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox minHeight="600.0" minWidth="900.0" spacing="20" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="juanycamilo.demo.Controller.ListadoMotoController">
    
    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <!-- Encabezado -->
    <Label style="-fx-text-fill: #2c3e50;" text="Listado De Motos" VBox.vgrow="ALWAYS">
        <font>
            <Font name="System Bold" size="28" />
        </font>
    </Label>

    <!-- Tabla de productos -->
    <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="15" left="15" right="15" top="15" />
        </padding>

        <Label style="-fx-text-fill: #34495e; -fx-font-size: 16px; -fx-font-weight: bold;" text="Lista de Productos">
            <VBox.margin>
                <Insets bottom="10" />
            </VBox.margin>
        </Label>

        <TableView fx:id="tablaMotos" maxWidth="Infinity" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colPlaca" prefWidth="100" text="Placa" />
                <TableColumn fx:id="colModelo" prefWidth="200" text="Modelo" />
                <TableColumn fx:id="colMarca" prefWidth="280" text="Marca" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets top="15" />
            </VBox.margin>
            <Button fx:id="btnVolver" onAction="#onVolverDashboard" prefHeight="35.0" prefWidth="116.0" style="-fx-background-color: gray; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 5;" text="Volver " />
         <Button fx:id="btnEliminar" layoutX="678.0" layoutY="10.0" onAction="#onEliminarMoto" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 5;" text="Eliminar Moto" />
        </HBox>
    </VBox>
</VBox>
